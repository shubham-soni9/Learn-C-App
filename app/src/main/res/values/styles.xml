<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextAppearance.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="CustomTextAppearance.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>

    <style name="more_options_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_grey</item>
        <item name="android:textAppearance">@style/CustomTextAppearance.Regular</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="more_options_seperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/black_10</item>
    </style>
</resources>
