<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_color">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Learn C"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Bold"
        android:textColor="#FFF"
        android:textSize="50sp"
        android:textStyle="italic" />

    <View
        android:id="@+id/splashView"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tvHeader"
        android:layout_centerInParent="true"
        android:background="@color/splash_view_color" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashView"
        android:layout_centerInParent="true"
        android:letterSpacing="0.40"
        android:text="Programming"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:ignore="UnusedAttribute" />

</RelativeLayout>