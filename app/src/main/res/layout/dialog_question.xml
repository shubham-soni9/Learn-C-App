<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@android:color/transparent"
    android:elevation="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornered_border_top">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_small"
            android:background="@drawable/oval_background_green"
            android:gravity="center"
            android:textStyle="bold"
            android:text="1"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small_13" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingBottom="10dp"
            android:paddingEnd="25dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingTop="10dp"
            android:text="My Title"
            android:textStyle="bold"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_100"
        android:padding="@dimen/_10dp"
        android:text="This is a message"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/text_size_normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5dp"
        android:background="@color/white_100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button_dialog_left"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_dialog_right"
                android:text="Cancel"
                android:textAllCaps="true"
                android:textColor="@drawable/dialog_text_color"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/ibClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/oval_background_white"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button_dialog_right"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/button_dialog_right"
                android:text="Ok"
                android:textAllCaps="true"
                android:textColor="@drawable/dialog_text_color"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
